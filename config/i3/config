client.unfocused        #262A2B  #262A2B  #DFDFDF  #262A2B   #262A2B
client.urgent           #002b36  #262A2B  #FFFFFF  #262A2B   #262A2B
client.placeholder      #000000  #000000  #FFFFFF  #000000   #000000
client.background       #FFFFFF
